.chanye
  position relative 
  width 100%
  overflow hidden
.chanye .section-2
  width 1920px
  height 620px
  position relative 
  left 50%
  transform translateX(-50%)
  overflow hidden
  img 
    width 100%
  img.bg
    position absolute 
    top 0
    left 0
    z-index -1
    transition .6s all ease-out 50ms
  .card-content
    width 1180px
    height 100%
    position absolute
    z-index 10
    left 50%
    transform translateX(-50%)
    .line-1
      float right
      width 250px
      height 340px
      margin-top 204px
    .line-2
      margin-top 140px
      float right 
      width 250px
      height 340px
      margin-right 20px
    .card-inner
      width 250px
      height 100px
      margin-bottom 20px
      background-color #fff
      border-radius 4px
      transform translateY(100px) scale(.8)
      transition .6s transform  ease-in-out,  .4s opacity  ease-out
      opacity 0
      box-shadow 0 2px 10px rgba(0,0,0,.05)
      img 
        width 100%
.chanye.section-2-card
  .section-2
    .card-content
      .card-inner
        transform translateY(0) scale(1)
        opacity 1







.chanye .section-3
  height 644px
  background-color white
  position relative
  overflow hidden
  .bg
    position absolute
    width 690px
    img 
      width 100%
  .bg-1
    left 0
    bottom 0
  .bg-2
    right 0
    top 0
    transform scale(-1)
  .content
    width 1230px
    height 484px
    margin 80px auto
    position relative
    z-index 10
    .card-content
      width 400px
      height 484px
      margin 5px
      float left 
      transform:perspective(2000px);
      transform-style preserve-3d
      .card
        width 400px
        height 484px
        background-color #fff
        box-shadow 0 2px 10px rgba(0,0,0,.2)
        border-radius 4px  
        transform rotateY(40deg) scale(.98) translateX(200px)
        transition .6s transform ease-in-out , .2s opacity ease-in-out
        opacity 0  
        img 
          width 100%

.chanye.section-3-card
  .section-3
    .content
      .card-content
        .card
          transform translateY(0) scale(1) translateX(00px)
          opacity 1

.chanye .section-4
  width 100%
  height 420px
  overflow hidden
  position relative
  .content
    width 1920px
    height 420px
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    img 
      width 100%
    img.top
      width 100%
      position absolute 
      top 0
      left 0
      z-index 3
    img.bottom 
      width 100%
      position absolute 
      bottom 0
      left 0
      z-index 3
      transform scaleY(-1)
    img.logo
      position absolute
      width 461px
      right 390px
      animation move 60s linear infinite
    .icon
      position absolute 
      left 310px
      top 180px
      .icon-circle
        width 120px
        margin 20px
        float left
        .icon-img
          width 74px
          height 74px
          margin auto
          background-color #fff
          border-radius 100px
          box-shadow 0 2px 10px rgba(0,0,0,.1)
          opacity 0
          transform scale(1.4)
          transition .4s all  ease-in-out
          img 
            width 100%
        .text
          color #ffffff
          font-size 16px
          line-height 30px
          text-align center
          font-weight bold
          opacity 0
          transform translateY(20px)
          transition .4s all ease-in-out
  
.chanye.section-4-card
  .section-4
    .content 
      .icon 
        .icon-img
          opacity 1
          transform scale(1)
        .text
          opacity 1
          transform translateY(0px)

@keyframes move
  0%
    transform translateY(0)
  100%
    transform translateY(-80%)


.chanye .section-5
  position relative 
  height 1080px
  background-color #F6F8FB
  overflow hidden
  .detail-content
    width 1180px
    margin-top 40px
    .card
      width 25%
      height 400px
      border 1px solid #DEDFE5
      border-left none
      box-sizing border-box
      float left
      opacity 1
      transform translateY(300px) 
      transition .8s all ease-out
      &:hover
        background-color #fff
        box-shadow 0 2px 10px rgba(0,0,0,.1)
        cursor pointer
        .img-content
          transition .3s all ease-in-out
          transform translateX(-50%) translateY(-10px)
          img 
            transition .2s all ease-in-out 0s
            transform translateY(-10px) scale(1.1)
            opacity 0
        .text-box
          opacity 1
          transform translateX(-50%) translateY(0)
          transition .4s all ease-in-out .1s
      img.display
        width 255px
        display block
        position absolute 
        bottom 20px
        left 50%
        transform translateX(-50%)
      .text-box
        width 255px
        position absolute 
        top 160px
        left 50%
        transform translateX(-50%) translateY(20px)
        opacity 0
        transition .4s all ease-in-out
        p
          font-size 12px
          color #191C3D
          line-height 24px
          opacity .8
      .img-content
        width 255px
        position absolute 
        bottom 20px
        left 50%
        transform translateX(-50%)  
        height 218px  
        overflow hidden   
        margin 0
        transition .3s all ease-in-out
        .line
          position absolute 
          width 100%
          height 1px
          top 0
          left 0
          background-color #DEDFE5
        img 
          // transform-origin top left
          width 100%
          transition .3s all ease-in-out .2s
    .card.first
      border-left 1px solid #DEDFE5
    .card.line-2
      border-top none
  .bg
    position absolute
    z-index 4
    img
      width 945px
  .bg-1
    top 0
    right 0
    transform scale(-1)
  .bg-2
    left 0
    bottom 0
  .img-content 
    width 1180px
    margin 80px auto
    position relative 
    z-index 10
    img 
      width 1180px
      display block
    .card-1
      width 296px
      height 401px
      background-color #fff
      position absolute
      top 83px
      left 0
      opacity 0
      transition .2s all ease-in-out
      img 
        width 255px
        margin 20px
      &:hover 
        opacity 1
        cursor pointer
        box-shadow 0 0 10px rgba(0,0,0,.15)

.chanye.section-5-card
  .section-5
    .detail-content
      .card
        opacity 1
        transform translateY(0px)
    

.chanye .bottom
  position relative
  height 1800px
  img
    position absolute 
    width 1920px
    left 50%
    transform translateX(-50%)